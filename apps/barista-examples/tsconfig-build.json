{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "../../dist/barista-examples",
    "sourceMap": true,
    "target": "es5",
    "stripInternal": false,
    "typeRoots": ["../../node_modules/@types/!(node)"],
    "baseUrl": ".",
    "rootDirs": [".", "../../dist/barista-examples"],
    "paths": {
      "@dynatrace/barista-components": ["../../dist/lib"],
      "@dynatrace/barista-components/*": ["../../dist/lib/*"]
    }
  },
  "files": [
    "../../typings.d.ts",
    "./app.module.ts",
    "./main.ts",
    "./polyfills.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": false,
    "fullTemplateTypeCheck": false,
    "preserveWhitespace": true
  }
}
